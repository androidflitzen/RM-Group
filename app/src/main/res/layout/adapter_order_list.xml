<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/view_order_list_a_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_order_list_a_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#O-12234"
                android:textColor="@color/blackText1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_order_list_a_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="12 June 2020"
                android:textColor="@color/blackText2"
                android:textSize="12sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invoice To"
                    android:textColor="@color/blackText3"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/txt_order_list_a_invoice_to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vivek Aghera"
                    android:textColor="@color/blackText1"
                    android:textSize="14sp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_order_list_a_view_pdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="5dp"
                android:foreground="?attr/selectableItemBackground"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/linkColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View PDF"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/divider" />
</LinearLayout>