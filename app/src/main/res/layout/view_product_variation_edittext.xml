<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stamp"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f14" />

            <EditText
                android:id="@+id/edt_product_details_v3_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f14" />

            <EditText
                android:id="@+id/edt_product_details_v3_touch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_edittext"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="@color/blackText1"
                android:textSize="@dimen/f14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_product_details_v3_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Select Type"
            android:textColor="@color/blackText1"
            android:textSize="@dimen/f14" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_product_details_v3_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:tabBackground="@drawable/bg_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="20dp"
            app:tabPaddingStart="20dp"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/blackText1">

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Disco"
                android:visibility="gone" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3 Pcs" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5 Pcs" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Casting Bandhan" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Shilpa" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_product_details_v3_vity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Vity"
            android:textColor="@color/blackText1"
            android:textSize="@dimen/f14" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_product_details_v3_vity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:tabBackground="@drawable/bg_tab_selector"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="20dp"
            app:tabPaddingStart="20dp"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/blackText1">

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="1"
                android:visibility="gone" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5" />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
</LinearLayout>